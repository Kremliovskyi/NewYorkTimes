<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.akremlov.nytimes">

    <permission android:name="com.example.akremlov.nytimes.provider.READANDWRITE" />

    <uses-permission android:name="com.example.akremlov.nytimes.provider.READANDWRITE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginScreen"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUp"
            android:theme="@style/AppTheme">

        </activity>
        <activity android:name=".LogIn"
            android:theme="@style/AppTheme">

        </activity>
        <provider
            android:name=".UsersProvider"
            android:authorities="com.example.akremlov.nytimes.provider"
            android:exported="true"
            android:readPermission="com.example.akremlov.nytimes.provider.READANDWRITE"
            android:writePermission="com.example.akremlov.nytimes.provider.READANDWRITE" />
    </application>

</manifest>